@using dbQLBDS.Models;
@model List<ThueCanHo>

@{
    ViewBag.Title = "Quản lý Thuê Căn Hộ";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

@{
    int count = ViewBag.Count;
    int rowperpage = ViewBag.RowPerPage;
    int page = ViewBag.Page;
}

<h2 class="dashboard-title">QUẢN LÝ THUÊ CĂN HỘ</h2>

<div class="editor-field">

    <div class="list-content">
        
        <table cellspacing="0" cellpadding="0">
            <tr>
                <th width="5%">
                    Mã
                </th>
                <th width="20%">
                    Tên Khách Hàng
                </th>
                <th width="20%">
                    Tên Căn Hộ
                </th>
                <th width="10%">
                    Tiền Cọc
                </th>
                <th width="10%">
                    Thời Gian Thuê
                </th>
                <th width="10%">
                    Thời Gian GD
                </th>
                <th width="10%">
                    Điện Thoại
                </th>
                <th width="10%">
                    &nbsp;
                </th>
            </tr>
            @foreach (ThueCanHo item in Model)
            {
                <tr>
                    <td>
                        @item.MaThueCanHo
                    </td>
                    <td>
                        @item.TenTaiKhoan
                    </td>
                    <td>
                        @item.TenCanHo
                    </td>
                    <td>
                        @item.TienCoc
                    </td>
                    <td>
                        @item.ThoiGianThue.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.ThoiGianGiaoDich.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.DienThoai
                    </td>
                    <td>
                        <a href="@Url.Action("ChiTietThueCanHo", "ThueCanHo", new { id = item.MaThueCanHo })" class="list-edit-button" ><img src="@Url.Content("~/Content/images/edit.png")" /></a>
                    </td>
                </tr>
            }
            
        </table>

        <div class="list-paging">
            @{
                double num = Math.Ceiling(count * 1.0 / rowperpage);
            }
            <ul>
                @for (int i = 1; i <= num; i++)
                {
                    if (i == page)
                    { 
                        <li>
                            <a href = "@Url.Action("Index", "ThueCanHo", new { @page = i })" class = "cur">@i</a>
                        </li>
                    }
                    else
                    { 
                        <li>
                            <a href="@Url.Action("Index","ThueCanHo", new { @page = i })" >@i</a>
                        </li>
                    }
                  }
            </ul>
        </div>

        
        
    </div>
    
</div>


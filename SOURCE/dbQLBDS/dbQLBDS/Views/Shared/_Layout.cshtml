@using dbQLBDS.Models

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Index.css")" type="text/css" rel="stylesheet"/>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/Index.js")" type="text/javascript" ></script>
</head>
<body>

    @{
        if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != "") 
        {
            <script type="text/javascript">
                alert("@ViewBag.ErrorMessage");
            </script>
        }


        TaiKhoan tk = new TaiKhoan();
        if (Session["taikhoan"] != null)
        {
            tk = (TaiKhoan)Session["taikhoan"];
        }
    }
    <div id="index-container">
        <div class="header">
            <a href="/Index" class="logo">
                <img src="@Url.Content("~/Content/images/icon100.png")" />
            </a>
            @if (Session["taikhoan"] == null)
            {
                <a href="/DangKy" class="btnDangKy">Đăng ký</a>
            }
            <ul class="menu">
                
                @if (Session["taikhoan"] != null)
                {
                    <li>
                        <a href="/DangXuat" class="" data-islogin="false">Đăng xuất
                        </a>
                        <div class="user-info">
                            <p>Chào, @tk.Ten</p>
                        </div>

                    </li>
                } else {
                    <li>
                        <a href="/DangNhap" class="btnDangNhap" data-islogin="false">Đăng nhập
                        </a>
                    </li>
                }
                <li>
                    <a href="/TimKiem" >Tìm kiếm</a>
                </li>

                <li>
                    <a href="/GioiThieu" >Giới thiệu</a>
                </li>

                <li>
                    <a href="/Index" >Trang chủ</a>
                </li>
            </ul>

        </div>

        <div id="main-content">
            @RenderBody()
        </div>


        <div class="footer">
            <p><b>Đồ án Hệ quản trị CSDL - 12HCA2</b></p>
            <span style="line-height:18px;">
                <b>Nhóm thực hiện:</b><br/>
                Nguyễn Ngọc Khánh (1241350)<br/>
                Bùi Bá Lộc (1241363)<br/>
                Dương Diệu Pháp (1241378)<br/>
                Nguyễn Quốc Tuấn (1241341)
            </span>
        </div>

    </div>

    
</body>
</html>
